<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="profit"
        android:id="@+id/proinput"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/pastinput"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your projected profit:"
        android:id="@+id/pastinput"
        android:layout_alignTop="@+id/proinput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Other Companies"
        android:id="@+id/header"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/proinput"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

</RelativeLayout>

